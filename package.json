{
    "name": "@rwai/pulse",
    "version": "0.1.4",
    "module": "dist/index.mjs",
    "type": "module",
    "files": [
        "dist/**",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "test": "vitest --run",
        "test:watch": "vitest --watch",
        "fmt": "prettier --config .qlty/configs/.prettierrc.json --write .",
        "qlty:check": "qlty check",
        "lint": "eslint --fix --config .qlty/configs/eslint.config.mjs .",
        "docs": "typedoc --options typedoc.json",
        "typecheck": "tsc --noEmit",
        "build": "bun run clean && tsup",
        "generate": "openapi-typescript openapi.yml -o src/models.ts"
    },
    "devDependencies": {
        "@dotenvx/dotenvx": "^1.44.2",
        "@eslint/markdown": "^6.5.0",
        "@pollyjs/adapter-fetch": "latest",
        "@pollyjs/adapter-node-http": "latest",
        "@pollyjs/core": "latest",
        "@pollyjs/persister-fs": "latest",
        "@types/bun": "latest",
        "@vitest/coverage-v8": "^3.2.3",
        "eslint": "^9.28.0",
        "eslint-plugin-sort-destructure-keys": "^2.0.0",
        "open": "^10.1.2",
        "openapi-typescript": "^7.8.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "tsup": "latest",
        "typedoc": "latest",
        "typescript-eslint": "^8.35.1",
        "undici": "^7.10.0",
        "utility-types": "^3.11.0",
        "vitest": "^3.2.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "dependencies": {
        "zod": "^3.25.64"
    }
}
